<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sch"
    tools:context="${packageName}.${activityClass}" >

    <ImageView
        android:id="@+id/raju_button_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/quiz_button_view"
        android:src="@drawable/raju4" />

    <ImageView
        android:id="@+id/settings_button_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/raju_button_view"
        android:layout_marginTop="22dp"
        android:layout_toRightOf="@+id/highscore_button_view"
        android:clickable="true"
        android:src="@layout/settings_button" />

    <ImageView
        android:id="@+id/highscore_button_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quiz_button_view"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@+id/raju_button_view"
        android:clickable="true"
        android:src="@layout/highscore_button" />

    <ImageView
        android:id="@+id/quiz_button_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/stories_button_view"
        android:layout_centerVertical="true"
        android:src="@layout/quiz_button" />

    <ImageView
        android:id="@+id/stories_button_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/quiz_button_view"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:scaleType="center"
        android:src="@layout/stories_button" />

</RelativeLayout>